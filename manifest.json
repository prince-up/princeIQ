{
  "manifest_version": 3,
  "name": "PrinceX - CS Concept Explainer",
  "version": "1.0.0",
  "description": "Highlight any text to get instant explanations - perfect for students and developers",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://vscode.dev/*",
        "https://github.dev/*",
        "https://stackoverflow.com/*",
        "https://leetcode.com/*",
        "https://www.geeksforgeeks.org/*",
        "file:///*",
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["explanation-panel.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
